<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>cn.lizhi.diyTomcat.webappservlet.HelloServlet</servlet-class>
        <init-param> <!-- 参数的设定 通过键值对 进行设定 -->
            <param-name>author</param-name>
            <param-value>chemLez(servlet)</param-value>
        </init-param>
        <init-param>
            <param-name>site</param-name>
            <param-value>http://chemlez.cn(servlet)</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

</web-app>